<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ProyectoPrimeraEvaluacionJuan.ViewModels"
             xmlns:dialogHostAvalonia="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
             xmlns:m="clr-namespace:ProyectoPrimeraEvaluacionJuan.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ProyectoPrimeraEvaluacionJuan.Views.ConsultaView"
             x:DataType="vm:ConsultaViewModel">
    <Design.DataContext>
        <vm:ConsultaViewModel/>
    </Design.DataContext>
    <Grid>
        
        <dialogHostAvalonia:DialogHost ZIndex="10"
            IsOpen="{Binding IsDialogHostOpen}" 
            Grid.ColumnSpan="3">
            
            <dialogHostAvalonia:DialogHost.DialogContent>
                <Grid RowDefinitions="Auto, *, Auto" Width="350">
                    <Grid.Background>
                        <SolidColorBrush Color="White"/>
                    </Grid.Background>
                    
                    <StackPanel Grid.Row="0" HorizontalAlignment="Stretch"
                        Background="#e0e0e0" Orientation="Horizontal" Spacing="10">
                        <TextBlock Text=" Confirmación Necesaria" 
                                   VerticalAlignment="Center"
                                   Foreground="Black"
                                   FontWeight="SemiBold"
                                   FontSize="16"/>
                        </StackPanel>
                            
                    <StackPanel Grid.Row="1" Margin="20" Spacing="10">
                        <TextBlock Text="¿Estás seguro de que quieres eliminar este petardo?"/>
                        
                        <TextBlock Text="{Binding PetardoSeleccionado.nombre}" 
                                   FontWeight="Bold"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" HorizontalAlignment="Right" Margin="10" Orientation="Horizontal" Spacing="10">
                        
                        <Button Content="CANCELAR" 
                                Command="{Binding EliminarPetardoCommand}"
                                CommandParameter="False"/>
                        
                        <Button Content="ACEPTAR" 
                                Command="{Binding EliminarPetardoCommand}"
                                CommandParameter="True"/>
                    </StackPanel>
                </Grid>
            </dialogHostAvalonia:DialogHost.DialogContent>
            
            
            <Grid RowDefinitions="*" ColumnDefinitions="2*, 1*">
                
                <ListBox Grid.Column="0" 
                         ItemsSource="{Binding ListaPetardos}"
                         SelectedItem="{Binding PetardoSeleccionado}" 
                         Margin="0, 0, 20, 0">
                    
                    <ListBox.ItemTemplate>
                        <DataTemplate x:DataType="m:PetardoModel">
                            <StackPanel Orientation="Horizontal" Spacing="20">
                                <TextBlock Text="{Binding nombre}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Tipo}" Foreground="Gray"/>
                                <TextBlock Text="{Binding potencia}" Foreground="#FF8000"/>
                                <TextBlock Text="Peligroso" IsVisible="{Binding peligroso}" Foreground="Red"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <StackPanel Grid.Column="1" 
                            Orientation="Vertical" 
                            VerticalAlignment="Top" 
                            Spacing="10"
                            Margin="0, 10, 0, 0">
                    
                    <Button Content=" Eliminar Petardo"
                            Command="{Binding ConfirmarEliminacionCommand}"
                            HorizontalAlignment="Stretch"
                            Classes="negative"
                            IsEnabled="{Binding PetardoSeleccionado}"/>
                    
                    <TextBlock Text="Detalles del Petardo Seleccionado:" 
                               Margin="0, 10, 0, 5" 
                               FontWeight="SemiBold"
                               IsVisible="{Binding PetardoSeleccionado}"/>
                    <TextBlock Text="{Binding PetardoSeleccionado.fechaRecogida, StringFormat='Fecha: {0:dd/MM/yyyy}'}" />
                    
                </StackPanel>
                
            </Grid>
            
        </dialogHostAvalonia:DialogHost>

    </Grid>
    
</UserControl>
